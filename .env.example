# ClubVantage Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# DATABASE
# ============================================================================

# PostgreSQL connection string
DATABASE_URL="postgresql://username:password@localhost:5432/clubvantage?schema=public"

# Direct database URL (for migrations, bypasses connection pooling)
DIRECT_URL="postgresql://username:password@localhost:5432/clubvantage?schema=public"

# ============================================================================
# AUTHENTICATION
# ============================================================================

# JWT secret for access tokens (generate with: openssl rand -base64 32)
JWT_ACCESS_SECRET="your-access-secret-here"

# JWT secret for refresh tokens
JWT_REFRESH_SECRET="your-refresh-secret-here"

# Token expiration times
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# ============================================================================
# APPLICATION
# ============================================================================

# Node environment
NODE_ENV="development"

# Application URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# API URL
NEXT_PUBLIC_API_URL="http://localhost:4000"

# ============================================================================
# SERVICES (Optional)
# ============================================================================

# Email service (SendGrid, Resend, etc.)
# EMAIL_SERVICE_API_KEY=""

# SMS service (Twilio, etc.)
# SMS_SERVICE_API_KEY=""

# Payment gateway (Stripe, Omise, etc.)
# PAYMENT_GATEWAY_API_KEY=""
# PAYMENT_GATEWAY_SECRET_KEY=""

# File storage (S3, Cloudflare R2, etc.)
# STORAGE_BUCKET=""
# STORAGE_ACCESS_KEY=""
# STORAGE_SECRET_KEY=""
# STORAGE_ENDPOINT=""
